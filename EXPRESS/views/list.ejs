<%- include('./partials/header') %>
<div class="container">
  <div class="card">
    <div class="card-header">
      <h1>BREAD (Browse, Read, Edit, Add, Delete)</h1>
    </div>
    <div class="card-body">
      <form>

        <div class="row mb-3">
          <label for="ID" class="col-sm-2 col-form-label"><input type="checkbox" name="idCheck"> ID</label>
          <div class="col-sm-10">
            <input type="number" class="form-control" id="ID" name="id">
          </div>
        </div>

        <div class="row mb-3">
          <label for="string" class="col-sm-2 col-form-label"><input type="checkbox" name="stringCheck"> String</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="string" name="string">
          </div>
        </div>

        <div class="row mb-3">
          <label for="integer" class="col-sm-2 col-form-label"><input type="checkbox" name="intCheck"> Integer</label>
          <div class="col-sm-10">
            <input type="number" class="form-control" id="integer" name="integer">
          </div>
        </div>

        <div class="row mb-3">
          <label for="float" class="col-sm-2 col-form-label"><input type="checkbox" name="floatCheck"> Float</label>
          <div class="col-sm-10">
            <input type="number" step="0.5" class="form-control" id="float" name="float">
          </div>
        </div>

        <div class="row mb-3">
          <label for="date" class="col-sm-2 col-form-label"><input type="checkbox" name="dateCheck"> Date</label>
          <div class="col-sm-10">
            <input type="date" class="form-control" id="date" name="date">
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="boolean" class="col-sm-2 col-form-label"><input type="checkbox" name="booleanCheck"> Boolean</label>
          <div class="col-sm-10">
            <select type="boolea" class="form-control" id="boolean" name="boolean">
              <option value="">true</option>
              <option value="">false</option>
            </select>
          </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Search</button>
        <a href="/" class="btn btn-warning">Reset</a>
        </form>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>String</th>
          <th>integer</th>
          <th>Float</th>
          <th>date</th>
          <th>Boolean</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% tasks.forEach((item, index)=>{ %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= item.string %></td>
          <td><%= item.integer %></td>
          <td><%= item.float %></td>
          <td><%= moment(item.date).format('MMM Do, YYYY') %></td>
          <td><%= item.boolean %></td>
          
          
          <td>
            <a href="/edit/<%= item.id %>" class="btn btn-success">edit</a>
            <a href="/delete/<%= item.id%>" class="btn btn-danger" onclick="return confirm('yakin bang')">delete</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
<div class="card-footer">
  <a href="/add" class="btn btn-primary">Add</a>
</div>

  </div>
</div>
<%- include('./partials/footer') %>
