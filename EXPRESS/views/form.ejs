<%- include('./partials/header') %>
  <div class="container">
    <div class="card">
      <div class="card-header">
        <h1>Add/Edit</h1>
      </div>
      <div class="card-body">
        <form action="/add"method ="post">

          <div class="row mb-3">
            <label for="string" class="col-sm-2 col-form-label">String</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="string" name="string" value="<%= item.string %>" required>
            </div>
          </div>

          <div class="row mb-3">
            <label for="integer" class="col-sm-2 col-form-label">Integer</label>
            <div class="col-sm-10">
              <input type="number" class="form-control" id="integer" name="integer" value="<%= item.integer %>" required>
            </div>
          </div>

          <div class="row mb-3">
            <label for="float" class="col-sm-2 col-form-label">Float</label>
            <div class="col-sm-10">
              <input type="number" step="0.5" class="form-control" id="float" name="float" value="<%= item.float %>" required>
            </div>
          </div>

          <div class="row mb-3">
            <label for="date" class="col-sm-2 col-form-label">Date</label>
            <div class="col-sm-10">
              <input type="date" class="form-control" id="date" name="date" value="<%= moment(item.date).format('YYYY-MM-DD') %>" required>
            </div>
          </div>

          <div class="row mb-3">
            <label for="boolean" class="col-sm-2 col-form-label">Boolean</label>
            <div class="col-sm-10">
              <select class="form-control" id="boolean" name="boolean" value="<%= item.boolean %>" required>
                <option value=true>true</option>
                <option value=false>false</option>
              </select>
            </div>
          </div>

          <button type="submit" class="btn btn-primary">Save</button>
          <a href="/" class="btn btn-warning">Back</a>
        </form>
    </div>
  </div>
  <%- include('./partials/footer') %>